{
  "rewrites": [
    {
      "source": "/api/user/:CONTROLLER/:SCOPE?",
      "destination": "/api/user"
    },
    {
      "source": "/api/post/:CONTROLLER/:SCOPE?",
      "destination": "/api/post"
    },
    {
      "source": "/api/config/:CONTROLLER/:SCOPE?",
      "destination": "/api/config"
    },
    {
      "source": "/api(.*)",
      "destination": "/api/404"
    }
  ]
}